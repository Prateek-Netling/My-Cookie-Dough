{{ product.metafields }}


<!--  section -->
        <div class="section nutritional-info">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <header>
                  <h3>{{ section.settings.heading }}</h3>
                </header>
                <div class="custom-accordion">
                  
                  <div class="custom-card active">
                    <div class="custom-accordion-header"> {{ section.settings.summary-heading }} </div>
                    <div class="custom-accordion-content">
                      <div class="inner-content">
                        <ul class="list3">
                          {% assign scope = product.metafields.airf %}
                          {% assign summary = scope.summary %}
                          {% if summary and summary != blank %}
                              {% for row in summary.rows %}
                                <li>
                                  <span class="data">{{ scope[row[0].key] }}</span>
                                  <span class="value">{{ scope[row[1].key] }}</span>
                                </li>
                              {% endfor %}
                          {% endif %}
                        </ul>
                      </div>
                    </div>
                  </div>

                <div class="custom-card">
                    <div class="custom-accordion-header"> {{ section.settings.allergen-heading }} </div>
                    <div class="custom-accordion-content">
                      <div class="inner-content">
                        <ul class="list3">
                         {% assign scope = product.metafields.airf %}
                          {% assign allergen = scope.allergen %}
                          {% if allergen and allergen != blank %}
                              {% for row in allergen.rows %}
                                <li>
                                  <span class="data">{{ scope[row[0].key] }}</span>
                                  <span class="value">{{ scope[row[1].key] }}</span>
                                </li>
                              {% endfor %}
                          {% endif %}
                        </ul>
                      </div>
                    </div>
                  </div>

                  <div class="custom-card">
                    <div class="custom-accordion-header"> {{ section.settings.storage-heading }} </div>
                    <div class="custom-accordion-content">
                      <div class="inner-content">
                        <ul class="list3">
                          {% assign scope = product.metafields.airf %}
                          {% assign storage = scope.storage %}
                          {% if storage and storage != blank %}
                              {% for row in storage.rows %}
                                <li>
                                  <span class="data">{{ scope[row[0].key] }}</span>
                                  <span class="value">{{ scope[row[1].key] }}</span>
                                </li>
                              {% endfor %}
                          {% endif %}
                      </div>
                    </div>
                  </div>
    
              </div>
            </div>
          </div>
        </div>
        <!-- /section -->


{% schema %}
  {
    "name": "Nutritional Information",
    "settings": [
      {
        "id": "heading",
        "type": "text",
        "label": "Heading",
        "default": "NUTRITIONAL INFORMATION"
      },
      {
        "id": "summary-heading",
        "type": "text",
        "label": "Nutrition Summary Heading",
        "default": "Nutrition Summary"
      },
      {
        "id": "allergen-heading",
        "type": "text",
        "label": "Allergen Info Heading",
        "default": "Allergen Info"
      },
      {
        "id": "storage-heading",
        "type": "text",
        "label": "Storage Details Heading",
        "default": "Storage Details"
      }
    ]
  }
{% endschema %}